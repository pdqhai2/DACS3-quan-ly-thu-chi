<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/income_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp">

        <TextView
            android:id="@+id/incomeaddintype_id"
            android:layout_width="21dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="130dp"
            android:paddingLeft="5dp"
            android:text="intype id"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/income_add_user_id"
            android:layout_width="21dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="193dp"
            android:paddingLeft="5dp"
            android:text="income id"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/incomeaddintype_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:text="Tiền lương tháng 3"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/income_add_btnType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:padding="15dp"
            android:text="chọn"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>